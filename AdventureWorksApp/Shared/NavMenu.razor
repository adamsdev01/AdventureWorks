<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Adventure Works</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <div class="large-icons">
                    <TelerikIcon Icon="home"></TelerikIcon> Home
                </div>
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/SalesDepartment/SalesGrid" onclick="Sales">
                <i class='fas fa-dollar-sign' style='font-size:18px'></i> Sales Department
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/PurchasingDepartment/PurchaseOrderGrid" onclick="Purchase">
                <i class='far fa-money-bill-alt' style='font-size:18px'></i> Purchasing Department
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/ContactInfo/ContactsGrid" onclick="Person">
                 <div class="large-icons">
                     <i class='far fa-address-card' style='font-size:18px'></i> Contacts
                </div>
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/ProductDepartment/ProductsGrid" onclick="Production">
                 <div class="large-icons">
                    <TelerikIcon Icon="ungroup"></TelerikIcon> Production Department
                </div>
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/HRDepartment/HRGrid" onclick="HumanResource">
                 <div class="large-icons">
                    <TelerikIcon Icon="ungroup"></TelerikIcon> HR Department
                </div>
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/Reports/Dashboard" onclick="HumanResource">
                 <div class="large-icons">
                    <TelerikIcon Icon="chart-line-stacked"></TelerikIcon> Dashboard
                </div>
            </NavLink>
        </li>
    </ul>
</div>

@code {
    @inject NavigationManager _navigationManager

    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void Sales()
    {
        _navigationManager.NavigateTo("SalesGrid", true);
    }

    private void Purchase()
    {
        _navigationManager.NavigateTo("PurchasingDataGrid", true);
    }

    private void Person()
    {
        _navigationManager.NavigateTo("ContactsGrid", true);
    }

    private void Production()
    {
        _navigationManager.NavigateTo("ProductionDataGrid", true);
    }

    private void HumanResource()
    {
        _navigationManager.NavigateTo("HRGrid", true);
    } 

    private void Reports()
    {
        _navigationManager.NavigateTo("Reports", true);
    } 
    
}
